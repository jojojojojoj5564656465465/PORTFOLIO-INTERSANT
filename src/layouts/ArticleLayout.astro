---
import BaseLayout from './BaseLayout.astro'
import ArticleContainer from "../components/article-container"
import cn from "../lib/class-names"

export interface Props {
	title: string
	description?: string
	tab?: string
	isIndexed?: boolean
	slug?: string
	className?: string
}

let { title, description, tab, slug, isIndexed, className } = Astro.props
---

<BaseLayout title={title} description={description} tab={tab} slug={slug} isIndexed={isIndexed}>
	<ArticleContainer className={cn('pb-12', className)}>
		<slot />
	</ArticleContainer>
</BaseLayout>