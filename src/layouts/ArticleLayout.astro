---
import BaseLayout from './BaseLayout.astro'
import ArticleDiv from "../components/article-div"
import cn from "../lib/class-names"

export interface Props {
	title: string
	tab?: string
	isIndexed?: boolean
	slug?: string
	className?: string
}

let { title, tab, slug, isIndexed, className } = Astro.props
---

<BaseLayout title={title} tab={tab} slug={slug} isIndexed={isIndexed} className={cn("mt-8 lg:mt-12", className)}>
	<ArticleDiv className={cn('mb-16', className)}>
		<slot />
	</ArticleDiv>
</BaseLayout>