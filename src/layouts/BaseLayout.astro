---
import SmallHeader from "../components/header/small-header"
import LargeHeader from "../components/header/large-header"
import cn from "../lib/class-names"
import BaseHead from "./BaseHead.astro"
import Footer from "./footer"

export interface Props {
  title: string
  description?: string
  tab?: string
  slug?: string
  isIndexed?: boolean
  className?: string
}

let { title, description, tab, slug, isIndexed = true, className } = Astro.props
---

<html lang="en">

<head>
  <BaseHead title={title} slug={slug} isIndexed={isIndexed} />
</head>

<body>
  <header class="w-full border-b py-0 lg:py-2 border-gray-200">
    <div class="block lg:hidden">
      <SmallHeader title={title} tab={tab} client:visible />
    </div>
    <LargeHeader title={title} tab={tab} />
  </header>

  <main class={cn("w-full min-h-screen", className)}>
    <slot />
  </main>

  <Footer />
</body>

</html>