---
import SmallHeader from "../components/header/small-header"
import LargeHeader from "../components/header/large-header"
import cn from "../lib/class-names"
import BaseHead from "./BaseHead.astro"
import Footer from "./footer"

export interface Props {
  title: string
  description?: string
  tab?: string
  path?: string
  isIndexed?: boolean
  className?: string
}

let { title, description, tab, path="/", isIndexed=true, className } = Astro.props
---

<html lang="en">

<head>
  <BaseHead title="Home" path={path} isIndexed={isIndexed} />
</head>

<body>
  <header class="w-full border-b py-0 lg:py-2 border-gray-200">
    <SmallHeader title={title} />
    <LargeHeader title={title} />
  </header>

  <main class={cn("w-full min-h-screen", className)}>
    <slot />
  </main>

  <Footer />
</body>

</html>