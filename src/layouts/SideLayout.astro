---
import ContentLayout from "./ContentLayout.astro"
import ThreeQuarterLayout from "./three-quarter-layout"

export interface Props {
  title: string
  description?: string
  tab?: string
  isIndexed?: boolean
  className?: string
}

let { title, description, tab, isIndexed = true, className } = Astro.props
---

<ContentLayout title={title} description={description} tab={tab} isIndexed={isIndexed} className={className}>
  <ThreeQuarterLayout>
    <slot />
  </ThreeQuarterLayout>
</ContentLayout>