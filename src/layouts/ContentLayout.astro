---
import PageTitle from "../components/page-title"
import ArticleLayout from "./ArticleLayout.astro"
import cn from "../lib/class-names"

export interface Props {
	title: string
	description?: string
	supertitle?: string
	tab?: string
	isIndexed?: boolean
	slug?: string
	className?: string
}

let { title, description, supertitle, tab, slug, isIndexed = true, className } = Astro.props
---

<ArticleLayout title={title} description={description} tab={tab} isIndexed={isIndexed} slug={slug} className={cn("mt-16", className)}>
	<PageTitle title={title} subtitle={description} supertitle={supertitle} />
	<slot />
</ArticleLayout>